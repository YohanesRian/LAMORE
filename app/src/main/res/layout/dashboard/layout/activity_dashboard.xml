<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard.Dashboard"
    android:background="@color/background">
    <FrameLayout
        android:id="@+id/dashboard_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="55dp"/>
    <nl.joery.animatedbottombar.AnimatedBottomBar
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/bottomnavbarshape"
        app:abb_selectedIndex="0"
        app:abb_tabs="@menu/navbar_menu"
        app:abb_selectedTabType="text"
        app:abb_tabColor="@color/navbar_text"
        app:abb_tabColorSelected="@color/navbar_text"
        app:abb_indicatorColor="@color/navbar_text"
        app:abb_indicatorMargin="5dp"
        app:abb_textAppearance="@style/NavbarText"
        app:abb_animationDuration="500"
        app:abb_tabAnimation="fade"
        app:abb_tabAnimationSelected="fade"
        android:id="@+id/Bottom_Navbar"
        android:layout_alignParentBottom="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"/>


</RelativeLayout>